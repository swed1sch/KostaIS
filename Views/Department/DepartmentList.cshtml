@model IEnumerable<Department>

<title>Список отделов</title>
<div class="container-fluid mt-3">

    <div id="accordion">
        @foreach (var v in Model)
        {

        <div class="card">
            <div class="card-header">
                <a class="card-link" data-toggle="collapse" href="#collapseOne">
                    @v.Name
                </a>
            </div>
            <form asp-action="DeleteDepartment" method="post">
                <input type="hidden" name="ID" value="@v.ID" />
                <button type="submit" class=" btn btn-outline-danger btn-sm">Удалить отдел</button>
            </form>
            <form action="UpdateDepartment">
                <button type="submit" class=" btn btn-outline-primary btn-sm">Изменить отдел</button>
            </form>
            
        </div>
            @foreach (var a in v.Employers)
            {
                <div class="card">
                    <div id="collapseOne" class="collapse showing" data-parent="#accordion">
                        <div>
                            @a.SurName
                            @a.FirstName
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>

<a asp-action="EmployersList" asp-controller="Employe" class="btn btn-primary">Список сотрудников</a>
<a asp-action="CreateDepartment" asp-controller="Department" class="btn btn-outline-primary">Добавить отел</a>


